{
  "name": "node-setup",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Diego Fernandes <diego.schell.f@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prestart": "npm install --production",
    "start": "node dist/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
    "knex:content": "knex --knexfile ./knex/contentKnexFile.ts migrate:latest",
    "knex:users": "knex --knexfile ./knex/usersKnexFile.ts migrate:latest",
    "knex:admin": "knex --knexfile ./knex/adminKnexFIle.ts migrate:latest",
    "copyFiles": "cp -r src/database/*.sqlite dist/database/ && cp package.json dist/",
    "prebuild": "npm run deleteDatabase && npm run createDatabase",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "postbuild": "npm run copyFiles",
    "installProd": "npm install --production",
    "deleteDatabase": "rm ./src/database/admin_enc19_database.sqlite && rm ./src/database/content_enc19_database.sqlite && rm ./src/database/users_enc19_database.sqlite",
    "createDatabase": "npm run knex:content && npm run knex:users && npm run knex:admin"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@types/aws-sdk": "^2.7.0",
    "@types/chalk": "^2.2.0",
    "@types/cors": "^2.8.9",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.0",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/knex": "^0.16.1",
    "@types/moment-timezone": "^0.5.30",
    "@types/multer": "^1.4.5",
    "@types/multer-s3": "^2.7.9",
    "@types/sqlite3": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node-dev": "^1.0.0-pre.49",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@types/lodash.debounce": "^4.0.6",
    "@types/morgan": "^1.9.2",
    "aws-sdk": "^2.818.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.15",
    "moment-timezone": "^0.5.33",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "sqlite3": "^5.0.0",
    "use-debounce": "^6.0.1",
    "use-lodash-debounce": "^1.1.0"
  }
}
